<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ball_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4px"
    app:cardCornerRadius="8px">

    <RelativeLayout
        android:id="@+id/balloon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ball_img"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/test_tourist_spot"
                />
            <ImageView
                android:id="@+id/success_img"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/success_check"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/text_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img"
            android:gravity="center"
            android:text="장소명"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_des"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/img"
            android:gravity="center|top"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="100sp"
            android:text="설명"
            android:textSize="5sp" />

        <TextView
            android:id="@+id/text_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:text="달성도"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/rate_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:layout_toEndOf="@+id/text_achievement"
            android:text="3"
            android:textSize="7sp" />
        <TextView
            android:id="@+id/slice_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:layout_toEndOf="@+id/rate_achievement"
            android:text="/"
            android:textSize="7sp" />
        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:layout_toEndOf="@+id/slice_achievement"
            android:text="3"
            android:textSize="7sp" />

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/rate_star"
            android:layout_toEndOf="@id/rate"
            android:layout_below="@id/text_des"
            android:layout_marginTop="7dp"
            android:layout_marginStart="50dp"
            />

        <TextView
            android:id="@+id/rating_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:layout_toEndOf="@+id/img_star"
            android:text="4.0"
            android:textSize="7sp" />
        <TextView
            android:id="@+id/slice_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:layout_toEndOf="@+id/rating_tourist"
            android:text="/"
            android:textSize="7sp" />
        <TextView
            android:id="@+id/rating_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/img"
            android:layout_toEndOf="@+id/slice_rating"
            android:text="5.0"
            android:textSize="7sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>